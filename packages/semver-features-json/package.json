{
  "name": "semver-features-json",
  "version": "1.0.0",
  "description": "SemVer-Based Feature Toggle Library - JSON Schema Package",
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "bin": {
    "semver-features-json": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:package": "publint .",
    "lint:attw": "attw --pack . --profile esm-only",
    "prepublishOnly": "npm run build && npm run lint:package && npm run lint:attw"
  },
  "keywords": [
    "semver",
    "feature-toggle",
    "feature-flag",
    "versioning"
  ],
  "author": "SQReder <sqreder@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.37.0",
    "typescript": "^5.0.3",
    "tsup": "^6.0.0",
    "@repo/typescript-config": "*",
    "@repo/tsup-config": "*"
  },
  "dependencies": {
    "semver": "^7.7.1",
    "zod": "^3.23.8",
    "semver-features": "*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SQReder/semver-features.git"
  },
  "bugs": {
    "url": "https://github.com/SQReder/semver-features/issues"
  },
  "homepage": "https://github.com/SQReder/semver-features"
}